<% if logged_in? %>
<%# ログインしているのであれば、 %>
  <div class="row">
    <div class="col-xs-8">
      <%= render 'tasks/tasks', tasks: @tasks %>
    </div>
  </div>
<% else %>
<%# ログインしていないのであれば、 %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Tasks</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>